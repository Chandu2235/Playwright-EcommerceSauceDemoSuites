{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "baseUrl": "../../",
        "paths": {
            "@config/*": ["src/tests/config/*"],
            "@tests/*": ["src/tests/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}